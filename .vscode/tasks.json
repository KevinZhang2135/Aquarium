{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-I",
                "/opt/homebrew/Cellar/sdl2/2.30.5/include",
                "-L",
                "/opt/homebrew/Cellar/sdl2/2.30.5/lib",
                "-lSDL2",
                "-o",
                "${workspaceFolder}/build/main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}